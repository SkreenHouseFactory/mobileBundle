{% extends 'SkreenHouseFactoryMobileBundle::layout.html.twig' %}

{% block title %}Votre télé s'agrandit !{% endblock %}

{% block content %}
<div style="text-align:center;">
<img src="/bundles/skreenhousefactorytv/images/liang/icon_logo_1280.png" alt="image" style="margin: 8% 0 20% 0;">
</div>
<form action="{{ path('mobile_search', {'q':''}) }}" method="get">
<input name="q" id="searchinput1" placeholder="Un film, une émission, un acteur, etc" value="" type="search" />
<input type="submit" data-theme="a" value="Lancer la recherche" />
</form>
<br/>
<a href="{{ path('mobile_selection') }}" data-iconpos="right" data-role="button" data-theme="a" data-icon="arrow-r">A voir en ce moment : TV, Replay, Vod et Cinéma</a>


<script>
$(document).ready(function(){
	if (typeof viewInitLastPage == 'undefined') {
		viewInitLastPage = true;
		API.selectIndexedDb('skhf', 'm_lastpage', 0, function(result){
	    console.log('skhf -> m_lastpage', result);
			if (typeof result.url != 'undefined') {
		    $.mobile.changePage(result.url);
			}
		});
	}
});
</script>
{% endblock %}